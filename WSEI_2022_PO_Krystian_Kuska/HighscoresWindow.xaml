<Window x:Class="WSEI_2022_PO_Krystian_Kuska.HighscoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSEI_2022_PO_Krystian_Kuska"
        mc:Ignorable="d"
        Title="Highscores" 
        SizeToContent="WidthAndHeight"
        ContentRendered="Window_ContentRendered"
        KeyUp="Window_KeyUp"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Black"
        MouseDown="Window_MouseDown" d:DesignWidth="400" d:DesignHeight="500">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Name="pnlTitleBar">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Consolas" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </Grid.Resources>
            <WrapPanel>
                <TextBlock><Run Text="Highscores"/></TextBlock>
            </WrapPanel>
            <ListBox Margin="10,80,10,80" Background="Black"/>
        </Grid>
    </DockPanel>
</Window>
